<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.memoapp.app.MainActivity">

    <RelativeLayout
        android:id="@+id/signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="아이디"
            android:background="@android:drawable/editbox_background"
            android:id="@+id/id_text_in_sign"
            android:layout_above="@+id/password_text_in_sign"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/sign_up_button" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="비밀번호"
            android:background="@android:drawable/editbox_background"
            android:inputType="textPassword"
            android:id="@+id/password_text_in_sign"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/id_text_in_sign"
            android:layout_alignEnd="@+id/id_text_in_sign"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="회원가입"
            android:id="@+id/sign_up_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/id_text_in_sign"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textAppearance="?android:textAppearanceLarge"
            android:id="@+id/textView"
            android:layout_above="@+id/id_text_in_sign"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
